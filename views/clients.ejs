<!DOCTYPE html>
<html>
  <%include header%>
  <body>
    <%include navbar%>
    <div class="container-fluid">
      <div class="row">
        <%include menus%>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <p><button type="button" class="btn btn-default" data-toggle="modal" data-target="#add">添加</button></p>
          <div id="clients-table"></div>
        </div>
        <%include forms/addClient%>
      </div>
    </div>
    <%include footer%>
    <script>
      $(document).ready(function () {
        $('#clients').addClass('active');
        $.ajax({
          type:'GET',
          url:'/api/clients',
          dataType: 'json',
          success: function(result){
            console.log(result);
            if(result.code==1){
              var html = '';
              html += '<p>'+result.msg+'</p>';
              if(result.data.length>0){
                html += '<table class="table table-striped table-bordered table-hover table-condensed">';
                html += '<thead><tr><td>key</td><td>token</td><td>备注</td><td>创建时间</td><td>状态</td><td>操作</td></tr></thead>';
                html += '<tbody>';
                result.data.forEach(function (client) {
                  html += '<tr>';
                  html += '<td>'+client.key+'</td>';
                  html += '<td>'+client.token+'</td>';
                  html += '<td>'+client.description+'</td>';
                  html += '<td>'+client.createTime+'</td>';
                  html += '<td>'+(client.status=="online"? '在线':'离线')+'</td>';
                  html += '<td></td>';
                  html += '</tr>';
                });
                html += '</tbody>';
                html += '</table>';
              }
              $('#clients-table').html(html);
            }
          }
        });
        $('#confirm').click(function () {
          $('#add-client').ajaxSubmit({
            success: function (data) {
              console.log(data);
              alert(data.msg);
              window.location.reload();
            }
          });
        });
      });
    </script>
  </body>
</html>
